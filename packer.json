{
    "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "aws_session_token": "",
    "ssh_username": "",
    "source_ami_id": "",
    "source_ami_owners": "",
    "source_ami_filter_name": "",
    "aws_region": "",
    "arch": "",
    "creator": ""
    },
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "token": "{{user `aws_session_token`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami_id`}}",
      "source_ami_filter": {
        "filters": {
          "name": "{{user `source_ami_filter_name`}}",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{user `source_ami_owners`}}"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "Golden-AMI-to-EKS-{{timestamp}}",
      "run_tags": {
        "Name": "Golden-AMI-to-EKS-{{timestamp}}",
        "Creator": "{{user `creator`}}"
      },
      "tags": {
        "Name": "Golden-AMI-to-EKS-{{timestamp}}",
        "Env": "Prod",
        "Scaleft": "Yes"
      }
    }],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'Executing script!' | sudo -S -E sh -eux '{{.Path}}'",
            "scripts": [
              "scripts/setup_repo_okta.sh"              
            ]
        }
    ]
  }